<%- include('partials/_header.ejs'); -%>
<div>
    <h1>Transactions</h1>
</div>

<!-- TRANSACTIONS AS CARDS -->
<div class="transactions-container">
<% if (data) { %>
    <% for (var i = 0; i < data.length; i++) { %>
        <div class="card">
            <div class="card-horizontal">
                <div class="card-body-img">
                    <img class="transaction_image" src="http://via.placeholder.com/50x50" alt="Card image cap">
                </div>
                <div class="card-body">
                    <h4 class="card-title"><%= data[i].notes -%></h4>
                    <p class="card-text"><%= data[i].cName -%></p>
                </div>
                <div class="card-body-amount">
                    <h5 class="card-title">$ <%= data[i].amount_spend -%></h5>
                    <p class="card-text"><%= data[i].date.toLocaleDateString("en-US"); -%></p>

                </div>
            </div>
        </div>
    <% }; %>
<% } %> %>
</div>

